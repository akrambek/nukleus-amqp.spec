property serverTransport "nukleus://streams/target#0"

accept ${serverTransport}
  option nukleus:window 8192
  option nukleus:transmission "duplex"

accepted
connected

# header exchange
read "AMQP" [0x00 0x01 0x00 0x00]
write "AMQP" [0x00 0x01 0x00 0x00]

# open frame exchange
read [0x00 0x00 0x00 0x12]                                        # length = 18
     [0x02]                                                       # dof = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x00]                                                  # channel = 0
     [0x00 0x53 0x10]                                             # performative = open (16)
     [0xc0 0x05]                                                  # list type (LIST1), length = 5
     [0x01]                                                       # field count = 1
     [0xa1 0x02] "c1"                                             # container-id = "c1"

write [0x00 0x00 0x00 0x1a]                                       # length = 26
      [0x02]                                                      # dof = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x00]                                                 # channel = 0
      [0x00 0x53 0x10]                                            # performative = open (16)
      [0xc0 0x0d]                                                 # list type (LIST1), length = 13
      [0x01]                                                      # field count = 1
      [0xa1 0x0a] "reaktivity"                                    # container-id = "reaktivity"

# close frame exchange
read [0x00 0x00 0x00 0x0c]                                        # length = 12
     [0x02]                                                       # dof = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x00]                                                  # channel = 0
     [0x00 0x53 0x18]                                             # performative = close (24)
     [0x45]                                                       # list type (list0)

write [0x00 0x00 0x00 0x0c]                                       # length = 12
      [0x02]                                                      # dof = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x00]                                                 # channel = 0
      [0x00 0x53 0x18]                                            # performative = close (24)
      [0x45]                                                      # list type (list0)
